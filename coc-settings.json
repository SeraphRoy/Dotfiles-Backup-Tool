{
   "coc.preferences.echodocSupport": true,
   "coc.preferences.formatOnSaveFiletypes": ["go"],
   "coc.preferences.diagnostic.infoSign":" ℹ",
   "coc.preferences.diagnostic.hintSign":" ℹ",
   "pyls.plugins.pycodestyle.enabled": false,
   "javascript.validate.enable": false,
   "languageserver": {
      "golang": {
         "command": "go-langserver",
         "filetypes": ["go"],
         "initializationOptions": {
            "diagnosticsEnabled": true,
            "formatTool": "goimports",
            "lintTool": "golint"
         }
      },
      "ocaml": {
         "command": "ocaml-language-server",
         "args": ["--stdio"],
         "filetypes": ["ocaml", "reason"]
      },
      "bash": {
         "command": "bash-language-server",
         "args": ["start"],
         "filetypes": ["sh"],
         "ignoredRootPaths": ["~"]
      }
   }
}
